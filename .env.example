# Database Configuration
DB_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://transcript_user:${DB_PASSWORD}@localhost:5432/transcript_gen

# Security
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random

# Master Node Configuration
MASTER_HOST=0.0.0.0
MASTER_PORT=8000

# Storage Paths
DATA_BASE_PATH=./data
SHARED_STORAGE_PATH=//network-share/transcript-data  # Windows UNC path
# SHARED_STORAGE_PATH=/mnt/shared/transcript-data    # Linux mount path

# API Keys (if using external services)
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_TOKEN=your_huggingface_token_here

# Monitoring
PROMETHEUS_PORT=9090
DASHBOARD_PORT=8080

# Node Configuration
NODE_TYPE=master  # master, generation, processing
NODE_ID=auto  # auto-generate or specify

# Thermal Limits (Celsius)
CPU_TEMP_LIMIT=80
GPU_TEMP_LIMIT=85

# Development Settings
DEBUG=false
LOG_LEVEL=INFO